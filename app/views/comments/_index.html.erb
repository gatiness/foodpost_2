<ul>
  <% comments.each do |comment| %>
    <div class = "box11" >
    <% if comment.id.present? %>
       <div class="comment-comment" id ="this_comment_<%= comment.id %>"></div>
      　　　<p><%= comment.comment %></p>

　　　<div class="edit_delete">
      　<% if comment.user == current_user %>
        <%= link_to "コメント編集", edit_post_comment_path(post, comment), remote: true, class:'btn btn-outline-success btn-sm' %>
        <%= link_to "コメント削除", post_comment_path(comment.post_id, comment.id), method: :delete, remote: true, class:'btn btn-outline-success btn-sm' %>
     </div>   
        <% end %>
      </div>
        <p class = "hr"></p>
    <% end %>
  <% end %> 

</ul> 