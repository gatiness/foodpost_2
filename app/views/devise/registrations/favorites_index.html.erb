<p>お気に入り一覧</p>



<table>
  <% @favorites.each do |favorite| %>
    <tbody>
      <tr>
        <td><%= favorite.post.user.name %></td>
      </tr>
      <tr>
        <td><%= favorite.post.content %></td>
      </tr>
    </tbody>
    <tfooter>
      <tr>
        <td><%= link_to 'お気に入り解除する', favorite_path(id: favorite.id), method: :delete, class: 'btn btn-info btn-block mb-4' %></td>
      </tr>
    </tfooter>
  <% end %>
</table>