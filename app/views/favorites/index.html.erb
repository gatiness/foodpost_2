<p id="notice"><%= notice %></p>
<div class="main">
<h2>Food Timeline</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th>favoriteed by</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.title %></td>
        <td><%= favorite.content %></td>
        <td><%= image_tag favorite.image %></td>
        <td><%= link_to favorite.user.name, user_path(favorite.user.id) %></td>
        <td><%= link_to 'Description', favorite %></td>
        <% if favorite.user == current_user %>
          <td><%= link_to 'Edit', edit_favorite_path(favorite) %></td>
          <td><%= link_to 'Delete', favorite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>  
    <% end %>  
      </tr>
  </tbody>
</table>

</div>