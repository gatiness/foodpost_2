<p id="notice"><%= notice %></p>
<div class="main">
<h2>お気に入りした投稿</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th>favoriteed by</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.post.title %></td>
        <td><%= favorite.post.content %></td>
        <td>
            <% if favorite.post.user.image.attached? %>
              <%= image_tag favorite.post.image %> 
            <% end %>
        </td>
        <td><%= link_to favorite.post.user.name, user_path(favorite.user.id) %></td>
        <td><%= link_to 'Description', favorite %></td>
        <% if favorite.user == current_user %>
          <td><%= link_to 'Delete', favorite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>  
    <% end %>  
      </tr>
  </tbody>
</table>

</div>