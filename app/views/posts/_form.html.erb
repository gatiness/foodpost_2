
  
<%= form_with(model: @post, local: true) do |form| %>
  <div class="field">
    <%= form.label :タイトル %><br>
    <%= form.text_area :title, placeholder: 'タイトルを入力' %>
  </div>
  <div class="field">
    <%= form.label :コンテンツ %><br>
    <%= form.text_area :content, placeholder: 'コンテンツを入力' %>
  </div>
  <div class="field">
    <%= form.label :画像 %><br>
    <%= form.file_field :image,　autocomplete: "image", accept: '.jpeg, .jpg, png' %>
  </div>
  <div class="field">
    <%= form.label "ラベル" %>
    <%= form.collection_check_boxes :label_ids, Label.all, :id, :name %>
  </div>
  <div class="actions">
    <%= form.submit "投稿する" %>
  </div>
<% end %> 