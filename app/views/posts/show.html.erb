<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="post-text">
    <p><strong>Title:</strong> : <%= @post.title %></p>
    <p><strong>Content:</strong> : <%= @post.content %></p>
    <p>
    <strong>Image:</strong>
    <% if @post.image.attached? %>
    <%= image_tag @post.image %>
    <% end %>
    </p>
  </div>

  <div id="comments_area">
    <%= render partial: 'comments/index', locals: { comments: @comments, post: @post } %>
  </div>
  <%= render partial: 'comments/form', locals: { comment: @comment, post: @post } %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
  </div>

  <% unless @post.user_id == current_user.id %>
    <% if @favorite.present? %>
      <%= link_to 'Remove from favorite', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'Favorite', favorites_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
  <% end %>
</div>
